<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/vehicle_list' %>
      </section>
    </aside>
	<div class="span8">
      <h3>Latest Fillups</h3>
      <%= render 'shared/feed' %>
    </div>    
  </div>
<% else %>
	<div class="center hero-unit">
		<h1>Fuel Tracker</h1>

		<h2>
			Where did all me fuel go yo?
		</h2>

		<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-success" %>
	</div>

	<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>	
<% end %>	

